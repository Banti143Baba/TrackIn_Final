<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/home">
      <i class="fa-solid fa-chart-line"></i>
      <span class="fw-bold text-white">TrackinTrade</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav gap-2">
        <li class="nav-item">
          <a class="nav-link text-white" href="/home">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">Docs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">Pricing</a>
        </li>

        <% if (currentUser) { %>
          <li class="nav-item">
            <a class="nav-link text-white" href="/users/<%= currentUser.uId %>">Dashboard</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button"
              data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i> <%= currentUser.uName %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="/users/<%= currentUser.uId %>/trades">My Journal</a></li>
              <li><a class="dropdown-item" href="/users/<%= currentUser.uId %>/notes">My Notes</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
            </ul>
          </li>
          <% } else { %>
            <li class="nav-item">
              <a class="btn btn-outline-light" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-primary" href="/signup">Register</a>
            </li>
          <% } %>
          
      </ul>
    </div>
  </div>
</nav>
