<% layout('layouts/boilerplate') -%>
 <body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
      <div class="w-100" style="max-width: 400px;">

        <form action="/login" method="POST" class="border p-4 rounded bg-white shadow-sm">
            <h1 class="text-center mb-4">Login</h1>
          <div class="mb-3">
            <label for="uEmail" class="form-label">Email</label>
            <input type="email" id="username" name="uEmail" class="form-control" required placeholder="Enter email" />
          </div>
          <div class="mb-3">
            <label for="uPass" class="form-label">Password</label>
            <input type="password" id="password" name="uPass" class="form-control" required placeholder="Enter password" />
          </div>
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <div class="text-center mt-3">
          <a href="/signup">Don't have an account? Sign up</a>
        </div>
      </div>
    </div> 
   


