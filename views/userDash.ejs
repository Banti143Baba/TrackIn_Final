<% layout('layouts/boilerplate_dash') -%>

<body style="background-color: #1E1F22; min-height: 100vh;">
  <div class="container py-5">
    <!-- Welcome Message -->
    <div class="text-center text-white mb-5">
      <h1 class="fw-bold">Welcome, <%= user.uName %> 👋</h1>
      <p class="text">Here’s a quick summary of your portfolio</p>
    </div>

    <!-- Portfolio Summary Card -->
    <div class="row justify-content-center mb-5">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg rounded-4 border-0">
          <div class="card-body p-4">
            <h4 class="card-title text-center mb-4">📊 Portfolio Summary</h4>
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between">
                <strong>Total P&L:</strong> <span><%= user.totalPL %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <strong>Profitable Trades:</strong> <span><%= user.pTrade %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <strong>Losing Trades:</strong> <span><%= user.lTrade %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="text-center">
      <h4 class="text-white mb-4">🔍 Quick Actions</h4>
      <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
        <a href="/users/<%= user.uId %>/trades" class="btn btn-outline-light px-4 py-2">
          📘 Go to Journal
        </a>
        <a href="/users/<%= user.uId %>/ai/insights" class="btn btn-outline-info px-4 py-2">
          💡 AI Insights
        </a>
        <a href="/users/<%= user.uId %>/notes" class="btn btn-outline-success px-4 py-2">
          📝 Go to Notes
        </a>
      </div>
    </div>
  </div>
</body>
