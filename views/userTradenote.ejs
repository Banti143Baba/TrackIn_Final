<!DOCTYPE html>
<html>
<head>
    <title><%= username %>'s Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2><%= username %>'s Notes</h2>

        <form action="/notes/add" method="POST" class="mb-4">
            <input class="form-control mb-2" type="text" name="title" placeholder="Title">
            <textarea class="form-control mb-2" name="content" placeholder="Write your note..."></textarea>
            <button class="btn btn-primary">Add Note</button>
        </form>

        <div class="row">
            <% notes.forEach(note => { %>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5><%= note.title %></h5>
                            <p><%= note.content %></p>
                            <form action="/notes/delete/<%= note.noteId %>" method="POST">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
